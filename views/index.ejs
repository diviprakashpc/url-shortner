<%- include("partials/header"); -%>
      <section class=" container container-lg header">
        <h1 class="mt-2">Shortly</h1>
        <p>Only service to shorten your long url</p>
      </section>
      <form action="/shortUrls" method="POST" class="input-group mb-auto">
          <label for="fullUrl" class="sr-only"></label>
          <input required placeholder="Url" type="url" name="fullUrl" id="fullUrl" class="form-control">
          <button class="btn btn-success" type="submit">Shrink</button>
        </form>
        
        <table class="table table-striped table-responsive">
          <thead>
            <tr>
              <th>Full URL</th>
              <th>Short URL</th>
              <th>Clicks</th>
            </tr>
          </thead>
          <tbody>
            <% shortUrls.forEach(shortUrl => { %>
              <tr>
                <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
                <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
                <td><%= shortUrl.clicks %></td>
                <form action="/delete/<%= shortUrl.short %>" method="POST">
                  <td><button type="submit" class="btn btn-sm btn-outline-danger">Delete</button></td>
                </form>
              </tr>
            <% }) %>
          </tbody>
        </table>
        <%- include("partials/footer"); -%>